{
"dataset":{
    "src": "./data/processed/CEP25000.csv",
    "z-stand": "False",
    "x_column": ["smiles"],
    "y_column": ["pce"]
    },
"model":{
    "name": "BILSTM",
    "model_specific":{
        "embedding_dimension":{"type":"int","low":8,"high":256},
        "mlp_layers":{"type":"int","low":1,"high":4},
        "mlp_units":{"type":"int","low":1,"high":15,"direction":"increasing"},
        "mlp_dropouts":{"type":"uniform","low":0.1,"high":0.3,"direction":"constant"}
        },
    "dataloader":{
        "type_dict": "label"
       }
    }
"training_specific":{
    "opt_name":"Adam",
    "lr":{"type":"loguniform","low":1e-5,"high":1e-2},
    "weight_decay":{"type":"loguniform","low":0,"high":0.01},
    "epochs": 300,
    "batch_size": 40,
    "patience": -1,
    "metric":0,
    "seed":1
    }
}