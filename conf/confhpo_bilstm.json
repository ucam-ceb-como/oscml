{
"numerical_settings":{
	"seed": 1,
    "cudnn_deterministic": true,
    "cudnn_benchmark": false
},
"dataset":{
    "src": "./data/processed/CEP25000.csv",
    "z-stand": "False",
    "x_column": ["smiles"],
    "y_column": ["pce"]
    },
"model":{
    "name": "BILSTM",
    "model_specific":{
        "embedding_dimension":{"type":"int","low":8,"high":256},
        "mlp_layers":{"type":"int","low":1,"high":4},
        "mlp_units":{"type":"int","low":1,"high":15,"direction":"increasing"},
        "mlp_dropouts":{"type":"uniform","low":0.1,"high":0.3,"direction":"constant"}
        },
	"max_sequence_length": 60, 
	"type_dict": "CEPDB or HOPV15"
    },
"training":{
	"optimiser":{
		"name":"Adam",
		"lr":{"type":"loguniform","low":1e-5,"high":1e-2},
		"weight_decay":{"type":"loguniform","low":1e-5,"high":0.01}
		},
	"batch_size": 40,
	"epochs": 300,
	"patience": -1,
	"metric": 0
    }
}