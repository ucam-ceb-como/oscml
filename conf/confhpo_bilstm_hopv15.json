{
"numerical_settings":{
	"seed": 1,
    "cudnn_deterministic": true,
    "cudnn_benchmark": false
},
"dataset":{
    "src": "./data/processed/HOPV_15_revised_2_processed_homo.csv",
    "z-stand": "False",
    "x_column": ["smiles"],
    "y_column": ["pce"],
	"split": [200, null, 36]
    },
"model":{
    "name": "BILSTM",
    "model_specific":{
        "embedding_dim":{"type":"categorical","choices":[8, 16, 32, 64, 128, 256]},
        "mlp_layers":{"type":"int","low":1,"high":4},
        "mlp_units":{"type":"int","low":8,"high":256,"starting_value":"embedding_dim","length":"mlp_layers","direction":"decreasing"},
        "mlp_dropouts":{"type":"uniform","low":0.0,"high":0.3,"direction":"constant","length":"mlp_layers"}
        },
	"max_sequence_length": 160,
	"type_dict": "HOPV15"
    },
"training":{
	"optimiser":{
		"name":"Adam",
		"lr":{"type":"loguniform","low":1e-5,"high":1e-2},
		"weight_decay":{"type":"loguniform","low":1e-5,"high":0.01}
		},
	"batch_size": 250,
	"epochs": 10,
	"patience": -1,
	"metric": "val_loss",
	"direction": "minimize",
	"__remove_this_bit__study_name": "bilstm_hopv15_homo",
	"__remove_this_bit__storage": "sqlite:///bilstm_hopv15_homo.db",
	"__remove_this_bit__load_if_exists": true,
	"__remove_this_bit__n_trials": 1,
	"__remove_this_bit__n_jobs": 1
    }
}